{
  "name": "pair",
  "version": "0.1.0",
  "description": "Launch a pair programming agent to watch your work and catch issues",
  "commands": [
    {
      "name": "pair",
      "description": "Start, stop, or check pair programming sessions",
      "source": "./skill.md"
    }
  ],
  "hooks": {
    "PostToolUse": [
      {
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pair-emit-activity.sh"
      }
    ],
    "PreToolUse": [
      {
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pair-check-feedback.sh"
      }
    ],
    "UserPromptSubmit": [
      {
        "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pair-user-prompt.sh"
      }
    ]
  }
}
